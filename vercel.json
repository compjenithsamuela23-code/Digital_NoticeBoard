{
  "installCommand": "npm install --prefix digital-notice-board/client && npm install --prefix digital-notice-board/server",
  "buildCommand": "npm --prefix digital-notice-board/client run build",
  "outputDirectory": "digital-notice-board/client/dist",
  "functions": {
    "api/[...path].js": {
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/[...path].js"
    },
    {
      "src": "/api",
      "dest": "/api/[...path].js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
